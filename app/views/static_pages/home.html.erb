<h1>StaticPages#home</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>

<div class="span8">

  <% if user_signed_in? && @current_user.microposts.any? %>
      <h3>Microposts (<%= @current_user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
  <% end %>



</div>
<div class="span8">
<% if user_signed_in? && @current_user.posts.any? %>
    <h3> posts (<%= @current_user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
<% end %>
</div>